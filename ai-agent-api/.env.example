# Service Configuration
PROJECT_NAME=AI-Agent-API-Service
VERSION=1.0.0
SERVICE_NAME=ai-agent-api-service
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/api.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://aiagent:password@localhost:5432/aiagent_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security Configuration
SECRET_KEY=your_secret_key_here_minimum_32_characters_long_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=360
JWT_REFRESH_TOKEN_EXPIRE_DAYS=1

# Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_CLI_PATH=claude

# Storage Configuration
STORAGE_BASE_PATH=/data
MAX_STORAGE_MB=10240
MAX_WORKING_DIR_SIZE_MB=1024

# Session Configuration
MAX_CONCURRENT_SESSIONS=5
SESSION_TIMEOUT_HOURS=24
SESSION_ARCHIVE_DAYS=180

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Monitoring Configuration
PROMETHEUS_ENABLED=true
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@example.com

# Slack Configuration (Optional)
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_SCHEDULED_TASKS=true
ENABLE_REPORT_GENERATION=true

# Phase 4: Claude SDK Settings
CLAUDE_SDK_DEFAULT_MODEL=claude-sonnet-4-5
CLAUDE_SDK_MAX_RETRIES=3
CLAUDE_SDK_RETRY_DELAY=2.0
CLAUDE_SDK_TIMEOUT_SECONDS=120
CLAUDE_SDK_DEFAULT_PERMISSION_MODE=default

# Phase 4: Storage & Archival Settings
STORAGE_PROVIDER=filesystem
AWS_S3_BUCKET=ai-agent-archives
AWS_S3_REGION=us-east-1
AWS_S3_ARCHIVE_PREFIX=archives/
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
ARCHIVE_COMPRESSION=gzip
ARCHIVE_AUTO_CLEANUP=true
ARCHIVE_RETENTION_DAYS=90

# Phase 4: Session Limits
MAX_CONCURRENT_INTERACTIVE_SESSIONS=10
MAX_CONCURRENT_BACKGROUND_SESSIONS=50
SESSION_IDLE_TIMEOUT_MINUTES=30
SESSION_AUTO_ARCHIVE_DAYS=180

# Phase 4: Metrics & Monitoring
ENABLE_METRICS_COLLECTION=true
METRICS_SNAPSHOT_INTERVAL_SECONDS=60
ENABLE_COST_TRACKING=true
USER_MONTHLY_BUDGET_USD=100.0
ENABLE_PERFORMANCE_MONITORING=true

# Phase 4: Hooks Settings
ENABLE_AUDIT_HOOK=true
ENABLE_METRICS_HOOK=true
ENABLE_VALIDATION_HOOK=true
ENABLE_NOTIFICATION_HOOK=false
HOOK_EXECUTION_TIMEOUT_MS=5000

# Phase 4: Permissions Settings
ENABLE_CUSTOM_POLICIES=true
PERMISSION_CACHE_TTL_SECONDS=300
DEFAULT_BLOCKED_COMMANDS=["rm -rf /","sudo rm","format","mkfs","dd if="]
DEFAULT_RESTRICTED_PATHS=["/etc/passwd","/etc/shadow","~/.ssh","~/.aws/credentials"]
